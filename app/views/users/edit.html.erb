<main>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
   
         <%= form_with model:@user, local:true do |f| %>
     
          <div class="form-group">
            <label for="user_name">Name</label>
            <div class="form-control name">
              <%= f.text_field :name%>
            </div>
          </div>
          
          <div class="form-group">
            <label for="user_image">Image</label>
            <div class="form-control-file user_image">
                <%= f.attachment_field :profile_image %>
            </div>
          </div>
          
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <div class="form-control introduction">
              <%= f.text_field :introduction %>
            </div>
           </div>
           
          <div class="form-group">
            <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
          </div>
          
          <% end %>
          
      </div>
    </div>
  </div>
</main>