<h2 class="mt-3">New book</h2>
      
<% @books.each do |book| %>
      
  <label for="book_title">Title</label>
   <div class = "form-control book_title">
    <%= f.text_field :book_title %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
      <div class="form-control book_body">
        <%= f.text_area :book_opinion %>
      </div>
  </div>
  
  <div class="form-group">
      <%#= f.submit 'Create Book' ,%>
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    <% end %>
  </div>